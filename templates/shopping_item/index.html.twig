{% extends 'base.html.twig' %}

{% block title %}ShoppingItem index{% endblock %}

{% block body %}
    <h1>ShoppingItem index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Label</th>
                <th>IsCheck</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for shopping_item in shopping_items %}
            <tr>
                <td>{{ shopping_item.id }}</td>
                <td>{{ shopping_item.label }}</td>
                <td>{{ shopping_item.isCheck ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_shopping_item_show', {'id': shopping_item.id}) }}">show</a>
                    <a href="{{ path('app_shopping_item_edit', {'id': shopping_item.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_shopping_item_new') }}">Create new</a>
{% endblock %}
